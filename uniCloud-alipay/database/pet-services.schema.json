{
  "bsonType": "object",
  "required": ["name", "price"],
  "permission": {
    "read": true,
    "create": "auth.uid != null",
    "update": "auth.uid != null",
    "delete": "auth.uid != null"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "title": "服务名称",
      "description": "服务项目的名称",
      "trim": "both"
    },
    "description": {
      "bsonType": "string",
      "title": "服务描述",
      "description": "服务项目的详细描述",
      "trim": "both"
    },
    "price": {
      "bsonType": "number",
      "title": "价格",
      "description": "服务的价格（元）",
      "minimum": 0
    },
    "image_url": {
      "bsonType": "string",
      "title": "图片地址",
      "description": "服务项目的展示图片地址",
      "trim": "both"
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
}